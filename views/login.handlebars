<div class="container mt-5">
  <div class="row">
    <form
      class="col-12 col-md-8 col-lg-7 border border-dark border-4 rounded mx-auto p-5 bg-dark"
    >
      <div>
        <label for="username" class="form-label">USERNAME:</label>
        <input type="text" id="username" class="form-control" />
      </div>
      <div>
        <label for="password" class="form-label">PASSWORD:</label>
        <input type="password" id="password" class="form-control" />
      </div>
      <div class="d-flex flex-column">
        {{#if login}}
          <button
            type="submit"
            id="login"
            class="btn btn-light text-dark mt-3"
          >LOG IN</button>
          <button type="button" id="signup" class="btn text-light mt-3">SIGN UP</button>
          <script src="/javascript/login.js"></script>
        {{else}}
          <button
            type="submit"
            id="signup"
            class="btn btn-light text-dark mt-3"
          >SIGN UP</button>
          <button type="button" id="login" class="btn text-light mt-3">LOG IN</button>
          <script src="/javascript/signup.js"></script>
        {{/if}}
      </div>
    </form>
  </div>
</div>